        "    }\n",
        "}\n",
        "def starszy(x, y):\n",
        "    wiek_x = fakty['wiek'].get(x)\n",
        "    wiek_y = fakty['wiek'].get(y)\n",
        "\n",
        "    if wiek_x is None or wiek_y is None:\n",
        "        return False\n",
        "\n",
        "        if wiek_x > wiek_y:\n",
        "          return True\n",
        "    return False\n",
        "\n",
        "print(starszy('Jan', 'Anna'))"
